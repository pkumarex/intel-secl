{
    "label": "TPM_1.2",
    "condition": [
        "//host_info/os_name//*[text()='VMware ESXi']",
        "//host_info/hardware_features/TPM/meta/tpm_version//*[text()='1.2']"
    ],
    "flavor_parts": {
        "PLATFORM": {
            "meta": {
                "tpm_version": "1.2"
            },
            "pcr_rules": [
                {
                    "pcr": {
                        "index": 0,
                        "bank": "SHA1"
                    },
                    "pcr_matches": true,
                    "eventlog_equals": {}
                },
                {
                    "pcr": {
                        "index": 17,
                        "bank": "SHA1"
                    },
                    "pcr_matches": true,
                    "eventlog_equals": {}
                }
            ]
        },
        "OS": {
            "meta": {
                "tpm_version": "1.2"
            },
            "pcr_rules": [
                {
                    "pcr": {
                        "index": 18,
                        "bank": "SHA1"
                    },
                    "pcr_matches": true,
                    "eventlog_equals": {
                        "excluding_tags": [
                            "commandLine.",
                            "componentName.imgdb.tgz",
                            "componentName.onetime.tgz",
                            "Vim25Api.HostTpmSoftwareComponentEventDetails"
                        ]
                    }
                },
                {
                    "pcr": {
                        "index": 19,
                        "bank": "SHA1"
                    },
                    "pcr_matches": true,
                    "eventlog_equals": {
                        "excluding_tags": [
                            "commandLine.",
                            "componentName.imgdb.tgz",
                            "componentName.onetime.tgz",
                            "Vim25Api.HostTpmSoftwareComponentEventDetails"
                        ]
                    }
                },
                {
                    "pcr": {
                        "index": 20,
                        "bank": "SHA1"
                    },
                    "pcr_matches": true,
                    "eventlog_equals": {
                        "excluding_tags": [
                            "commandLine.",
                            "componentName.imgdb.tgz",
                            "componentName.onetime.tgz",
                            "Vim25Api.HostTpmSoftwareComponentEventDetails"
                        ]
                    }
                }
            ]
        },
        "HOST_UNIQUE": {
            "meta": {
                "tpm_version": "1.2"
            },
            "pcr_rules": [
                {
                    "pcr": {
                        "index": 19,
                        "bank": "SHA1"
                    },
                    "pcr_matches": true,
                    "eventlog_includes": [
                        "commandLine.",
                        "componentName.imgdb.tgz",
                        "componentName.onetime.tgz"
                    ]
                }
            ]
        }
    }
}