FROM centos:8

COPY cmd/kbs/kbs /usr/bin/kbs

COPY build/image/libkmip.so.0.2 /tmp/libkmip.so.0.2

COPY build/image/entrypoint-kbs.sh /entrypoint.sh

RUN touch /.container-env && chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]